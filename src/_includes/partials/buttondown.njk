<form
  action="https://buttondown.email/api/emails/embed-subscribe/ds-design"
  method="post"
  target="popupwindow"
  onsubmit="window.open('https://buttondown.email/ds-design', 'popupwindow')"
  class="embeddable-buttondown-form | email-form | sm:flex sm:max-w-md"
>
    <label for="bd-email" class="sr-only">Enter your email</label>
    <input class="email-input" type="email" name="email" id="bd-email" autocomplete="email" required placeholder="Enter email" />
    <div class="mt-3 rounded-md sm:mt-0 sm:ml-3 sm:flex-shrink-0">
        <input class="email-button" type="submit" value="Subscribe" />
    </div>
</form>